{
  "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "outDir": "./build",
      "rootDir": "./src",
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "noImplicitAny": true,
      "typeRoots": [
        "./custom_typings",
        "./node_modules/@types"
      ]
  },
  "include": ["./src"]
}